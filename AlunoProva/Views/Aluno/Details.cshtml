            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Filiacao, new { htmlAttributes = new { @class = "form-control", disabled = "disable" } })

                </div>
            </div>
        </div>



        <div class="row">
            <div class="col-md-12">

                @Html.ActionLink("Editar", "Edit", new { id = Model.Id, @class = "btn btn-light" })

                <a class="btn btn-light" href="~/Aluno/Index">Voltar</a>
            </div>
        </div>
    </div>
}
