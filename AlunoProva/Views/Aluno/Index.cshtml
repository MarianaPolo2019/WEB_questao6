@model IEnumerable<AlunoProva.Models.AlunoModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Aluno</h1>
    <p class="mb4">Listagem de Alunos</p>

    <p>
        <a class="btn btn-primary btn-icon-split btn-sm"
           href="~/Aluno/Create">
            <span class="icon text-white">
                <i class="fas fa-plus-circle"></i>
            </span>
            <span class="text"> Adcionar </span>
        </a>

        <!-- DATATABLE-->

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Alunos</h6>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="sisDataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Curso)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                                <th scope="col">Funções</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Curso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Telefone)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Editar", "edit", new { id = item.Id }) |
                                            @Html.ActionLink("Detalhes", "details", new { id = item.Id }) |
                                            @Html.ActionLink("Apagar", "delete", new { id = item.Id }) |
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </p>

</div>

